    <body>

        <h1>Display Patient Details</h1>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Date</th>
              <th>Time</th>
              <th>Reason</th>
              <th>Id</th>

            </tr>
          </thead>

          <tbody>
            <% for(var i=0; i < appts.length; i++) { %>
            <tr>
              <td><%= appts[i].name %></td>
              <td><%= appts[i].date %></td>
              <td><%= appts[i].time %></td>
              <td><%= appts[i].reason %></td>
              <td><%= appts[i].id %></td>

            </tr>
            <% } %>
          </tbody>
        </table>
        <a href="DoctorMod" class="btn btn-primary">Back</a>



